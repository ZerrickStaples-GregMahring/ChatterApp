@model IEnumerable<ChatterApp.Models.Chat>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@foreach (var item in Model)
{
    <div class="message">
        @if (item.ApplicationUser == ViewBag.CurrentUser)
        {
            <i>@Html.DisplayFor(modelItem => item.ApplicationUser.UserName)</i>
            <span>@Html.DisplayFor(modelItem => item.Message)</span>
            <i>@Html.DisplayFor(modelItem => item.DatePosted)</i>
            <span>@Html.ActionLink("Delete", "Delete", new { id = item.ID })</span>
        }
    </div>
}

<button>@Html.ActionLink("Browse All Members", "Index", "Browse", new { area = "Browse" }, null)</button>



